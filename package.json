{
  "name": "gerda",
  "version": "0.1.102",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pnpm build:client && nest start",
    "start:ts": "bun run ./src/main.ts",
    "lint": "oxlint \"{src,apps,libs,test,tools}/**/*.ts\" --fix",
    "test": "vitest run --config ./test/vitest.config.ts",
    "test:cov": "vitest run --coverage --config ./test/vitest.config.ts",
    "test:e2e": "vitest run --config ./test/vitest.config.ts",
    "boilerplate": "bun test --timeout 30000 ./test/boilerplate.spec.ts",
    "build:client": "npx esbuild ./client/main.ts --bundle --outfile=./public/gerda_userscript.js --target=esnext --format=esm && npx esbuild ./client/shop.ts --bundle --outfile=./public/shop_userscript.js --target=esnext --format=esm && npx esbuild ./client/gerdacollection.ts --bundle --outfile=./public/gerdacollection_userscript.js --target=esnext --format=esm && node ./tools/scripts/inline-env-to-client.mjs",
    "tail": "node ./tools/scripts/tail-logs.mjs"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/serve-static": "^5.0.3",
    "@pdf-lib/fontkit": "^1.1.1",
    "@shevernitskiy/amo": "^0.2.14",
    "@shevernitskiy/post-calculator": "^0.1.3",
    "@shevernitskiy/post-tracking": "^0.1.2",
    "cdek": "^1.0.13",
    "google-auth-library": "^10.2.1",
    "google-spreadsheet": "^5.0.2",
    "grammy": "^1.38.1",
    "handlebars": "^4.7.8",
    "imap": "^0.8.19",
    "lru-cache": "^11.2.1",
    "nest-winston": "^1.10.2",
    "nodemailer": "^7.0.5",
    "number-to-words-ru": "^2.4.1",
    "pdf-lib": "^1.17.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tar-fs": "^3.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.4",
    "@types/express": "^5.0.3",
    "@types/imap": "^0.8.42",
    "@types/jquery": "^3.5.32",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@types/tar-fs": "^2.0.4",
    "@vitest/coverage-v8": "^2.0.1",
    "esbuild": "^0.25.9",
    "eventsource": "^4.0.0",
    "msw": "^2.10.5",
    "oxlint": "^1.12.0",
    "pactum": "^3.8.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "unplugin-swc": "^1.5.6",
    "vitest": "^2.0.1"
  },
  "pnpm": {
    "overrides": {
      "whatwg-url": "14.0.0",
