  "scripts": {
    "start": "bun run ./src/main.ts",
    "start:debug": "bun run --debug --hot ./src/main.ts",
    "start:prod": "bun build:client && bun start",
    "lint": "oxlint \"{src,apps,libs,test,scripts}/**/*.ts\" --fix",
    "test:all": "bun test --timeout=30000 ./test/cdek ./test/app.e2e-spec.ts",
    "test:cov": "bun test --timeout=30000 --coverage ./test/cdek ./test/app.e2e-spec.ts",
    "boilerplate": "bun test --timeout=30000 ./test/boilerplate.spec.ts",
    "build:client": "bun ./scripts/build-client.ts",
    "build:app": "bun ./scripts/build-client.ts && bun build ./src/main.ts --compile --outfile nest.exe --external @nestjs/microservices --external @nestjs/websockets",
    "tail": "bun ./scripts/tail-logs.ts"
  },
